<link rel="stylesheet" href="src/assets/css/closedTicket.css">
<div id="closedTicket">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            {% if closedTicket.error %}
                <div id="noTicketError" class="bg-warning text-uppercase text-danger text-center">{{ closedTicket.error|raw }}</div>
            {% endif %}
            {% if closedTicket.error is null %}
                <table class="table table-hover table-bordered">
                    <tr>
                        <th class="text-center text-primary text-capitalize">Titre</th>
                        <th class="text-center text-primary text-capitalize">Date</th>
                    </tr>
                    {% for i in closedTicket %}
                        <tr class="ticketOpened" data-id="{{ i.ticket.ticketId }}">
                            <td class="text-center">{{ i.ticket.ticketTitle }}</td>
                            <td class="text-center">{{ i.ticket.ticketDate }}</td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </div>
    </div>
</div>
<script src="src/assets/js/closedTicket.js"></script>
