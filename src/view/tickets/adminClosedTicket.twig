<link rel="stylesheet" href="src/assets/css/adminClosedTicket.css">
<div id="AdminClosedTicket">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            {% if AdminClosedTicket.error %}
                <div id="noTicketError" class="bg-warning text-uppercase text-danger text-center">{{ AdminClosedTicket.error|raw }}</div>
            {% endif %}
            {% if AdminClosedTicket.error is null %}
                <table class="table table-hover table-bordered">
                    <tr>
                        <th class="text-center text-primary text-capitalize">Titre</th>
                        <th class="text-center text-primary text-capitalize">Date</th>
                        <th class="text-center text-primary text-capitalize">User</th>
                        <th class="text-capitalize text-primary text-center">Admin</th>
                    </tr>
                    {% for i in AdminClosedTicket.element %}
                        <tr class="ticketClosed" data-id="{{ i.ticket.ticket_id }}">
                            <td class="text-center">{{ i.ticket.ticket_titre }}</td>
                            <td class="text-center">{{ i.ticket.ticket_date }}</td>
                            <td class="text-center">{{ i.user.user_username }}</td>
                            <td class="text-center">{{ i.admin.admin_username }}</td>
                        </tr>
                    {% endfor %}
                </table>
            {% endif %}
        </div>
    </div>
</div>

<script src="src/assets/js/AdminClosedTicket.js"></script>